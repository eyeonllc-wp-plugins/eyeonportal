{
  // "editor.defaultFormatter": "vscode.php-language-features",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.formatOnPaste": true,
  "[scss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[php]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.php-language-features"
  },
  "search.exclude": {
    "assets/plugins/**": true,
    "assets/css/**": true,
    "assets/fonts/**": true,
    "assets/map-releases/**": true,
    "inc/redux-core/**": true,
    "plugin-update-checker/**": true
  },
  "liveSassCompile.settings.compileOnWatch": true,
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/assets/css"
    },
    {
      "format": "compressed",
      "extensionName": ".min.css",
      "savePath": "/assets/css"
    }
  ],
  "liveSassCompile.settings.includeItems": [
    "/assets/scss/**.scss",
    "/elementor/scss/**.scss"
  ],
  "liveSassCompile.settings.generateMap": true,
  //autoprefix, will auto add perfix like -webkit- -moz-..
  "liveSassCompile.settings.autoprefix": [
    "> 1%",
    "last 2 versions"
  ],
  "formatFiles.excludedFolders": [
    "node_modules",
    ".vscode",
    ".git",
    "dist",
    ".chrome",
    "elementor/widgets/map/assets"
  ],
  "formatFiles.excludePattern": "elementor/widgets/map/assets/**"
}
